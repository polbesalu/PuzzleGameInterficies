<Window x:Class="Puzle.wndPausa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Puzle"
        mc:Ignorable="d"
        Title="Pausa" Height="350" Width="550" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" FontSize="20">
    <DockPanel Background="#C270F2">
        <Viewbox>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"  VerticalAlignment="Center">
            <TextBlock Text="PUZZLE PAUSAT" Padding="200,30,200,30" Margin="0,10,0,10" FontSize="42" FontWeight="ExtraBold" FontStyle="Italic" Foreground="#E5E8AE"/>
            <Button x:Name="btnContinuar" Click="btnContinuar_Click" Content="Continuar" Padding="200,30,200,30" Margin="0,10,0,10" Background="#E5E8AE"/>
            <Button x:Name="btnReiniciar" Click="btnReiniciar_Click" Content="Reiniciar" Padding="200,30,200,30" Margin="0,10,0,10" Background="#E5E8AE"/>
            <Button x:Name="btnInici" Click="btnInici_Click" Content="Inici" Padding="200,30,200,30" Margin="0,10,0,10" Background="#E5E8AE"/>
        </StackPanel>
        </Viewbox>
    </DockPanel>
</Window>
